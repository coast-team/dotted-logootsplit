{
  "compilerOptions": {
    "lib": ["es2017"],
    "noEmitHelpers": false,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "target": "ES5",
    "sourceMap": true,

    "outDir": "./.built",

    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "strict": true,

    "pretty": true
  },
  "include": ["src/**/*", "test/**/*"]
}
